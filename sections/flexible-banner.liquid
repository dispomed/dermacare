{{ 'section-flexible-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #FlexibleBanner-{{ section.id }} {
    --content-position-desktop: {{ section.settings.desktop_content_position }};
    --content-position-mobile: {{ section.settings.mobile_content_position }};
  }
  
  #FlexibleBanner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
  
  .flexible-banner-grid {
    display: grid;
    grid-template-areas: "banner";
    position: relative;
    isolation: isolate;
  }
  
  {% if section.settings.image != blank %}
  .flexible-banner-grid {
    min-height: var(--banner-min-height, 50vh);
  }
  
  .flexible-banner--small .flexible-banner-grid {
    --banner-min-height: 42rem;
  }
  
  .flexible-banner--medium .flexible-banner-grid {
    --banner-min-height: 56rem;
  }
  
  .flexible-banner--large .flexible-banner-grid {
    --banner-min-height: 72rem;
  }
  
  .flexible-banner--adapt .flexible-banner-grid {
    --banner-min-height: auto;
    height: auto;
  }
  
  @media screen and (max-width: 749px) {
    .flexible-banner--small .flexible-banner-grid {
      --banner-min-height: 28rem;
    }

    .flexible-banner--medium .flexible-banner-grid {
      --banner-min-height: 34rem;
    }

    .flexible-banner--large .flexible-banner-grid {
      --banner-min-height: 39rem;
    }
    
    {% if section.settings.show_text_below %}
    .flexible-banner-grid {
      grid-template-areas: 
        "banner"
        "content";
      grid-template-rows: var(--banner-height-mobile, 50vh) auto;
      min-height: auto;
    }
    {% endif %}
  }
  {% else %}
  .flexible-banner-grid {
    min-height: auto;
    padding: 4rem 0;
  }
  
  @media screen and (max-width: 749px) {
    .flexible-banner-grid {
      padding: 2rem 0;
    }
  }
  {% endif %}
  
  /* Content positioning based on settings */
  .flexible-banner__content {
    {% assign position_parts = section.settings.desktop_content_position | split: '-' %}
    {% assign vertical = position_parts[0] %}
    {% assign horizontal = position_parts[1] %}
    
    {% case vertical %}
      {% when 'top' %}
        align-items: start;
      {% when 'middle' %}
        align-items: center;
      {% when 'bottom' %}
        align-items: end;
    {% endcase %}
    
    {% case horizontal %}
      {% when 'left' %}
        justify-items: start;
        text-align: left;
      {% when 'center' %}
        justify-items: center;
        text-align: center;
      {% when 'right' %}
        justify-items: end;
        text-align: right;
    {% endcase %}
  }
  
  @media screen and (max-width: 749px) {
    .flexible-banner__content {
      {% assign mobile_parts = section.settings.mobile_content_position | split: '-' %}
      {% assign mobile_vertical = mobile_parts[0] %}
      {% assign mobile_horizontal = mobile_parts[1] %}
      
      {% case mobile_vertical %}
        {% when 'top' %}
          align-items: start;
        {% when 'middle' %}
          align-items: center;
        {% when 'bottom' %}
          align-items: end;
      {% endcase %}
      
      {% case mobile_horizontal %}
        {% when 'left' %}
          justify-items: start;
          text-align: left;
        {% when 'center' %}
          justify-items: center;
          text-align: center;
        {% when 'right' %}
          justify-items: end;
          text-align: right;
      {% endcase %}
    }
    
    {% if section.settings.show_text_below %}
    .flexible-banner__content {
      align-items: start;
      justify-items: start;
      text-align: left;
    }
    {% endif %}
  }
{%- endstyle -%}

<div
  id="FlexibleBanner-{{ section.id }}"
  class="flexible-banner flexible-banner--{{ section.settings.banner_height }}{% if section.settings.show_text_below %} flexible-banner--mobile-bottom{% endif %}{% if section.settings.show_text_box == false and section.settings.image != blank %} flexible-banner--desktop-transparent{% endif %} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="flexible-banner-grid{% if section.settings.layout == 'grid' %} page-width{% endif %}">
    
    {%- if section.settings.image != blank -%}
      <!-- Image Media Layer -->
      <div class="flexible-banner__media media">
        {%- liquid
          assign height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio | round
          assign sizes = '100vw'
          assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
          assign fetch_priority = 'auto'
          if section.index == 1
            assign fetch_priority = 'high'
          endif
        -%}
        {{
          section.settings.image
          | image_url: width: 3840
          | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'flexible-banner__image'
        }}
        
        <!-- Overlay Layer -->
        <div class="flexible-banner__overlay"></div>
      </div>
    {%- endif -%}
    
    <!-- Content Layer -->
    <div class="flexible-banner__content{% if section.settings.image == blank %} flexible-banner__content--no-image{% endif %} page-width">
      <div class="flexible-banner__container">
        
        {%- for block in section.blocks -%}
          <div class="flexible-banner__block flexible-banner__block--{{ block.type }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              
              {%- when 'heading' -%}
                <h2 class="flexible-banner__heading inline-richtext {{ block.settings.heading_size }}">
                  {{ block.settings.heading }}
                </h2>
              
              {%- when 'text' -%}
                <div class="flexible-banner__text rte {{ block.settings.text_style }}">
                  {{ block.settings.text }}
                </div>
              
              {%- when 'buttons' -%}
                <div class="flexible-banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} flexible-banner__buttons--multiple{% endif %}">
                  {%- if block.settings.button_label_1 != blank -%}
                    <a
                      {% if block.settings.button_link_1 == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link_1 }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                    >
                      {{- block.settings.button_label_1 | escape -}}
                    </a>
                  {%- endif -%}
                  {%- if block.settings.button_label_2 != blank -%}
                    <a
                      {% if block.settings.button_link_2 == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link_2 }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                    >
                      {{- block.settings.button_label_2 | escape -}}
                    </a>
                  {%- endif -%}
                </div>
              
              {%- when 'shopify_form' -%}
                <div class="flexible-banner__form">
                  {% if block.settings.form_id != blank %}
                    {% form 'contact', id: block.settings.form_id, class: 'flexible-banner__contact-form' %}
                      {% if form.errors %}
                        <div class="form__message form__message--error">
                          <h3 class="form-status caption-large text-body" tabindex="-1" autofocus>
                            {% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}
                          </h3>
                        </div>
                        <ul class="form-status-list caption-large" role="list">
                          <li>
                            <a href="#ContactForm-email" class="link">
                              {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                            </a>
                          </li>
                        </ul>
                      {% endif %}
                      
                      {% if form.posted_successfully? %}
                        <div class="form-status-list form__message" tabindex="-1" autofocus>
                          <h3 class="form-status">
                            {% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}
                          </h3>
                        </div>
                      {% endif %}
                      
                      <div class="field">
                        <input
                          id="ContactForm-email"
                          class="field__input"
                          autocomplete="email"
                          type="email"
                          name="contact[email]"
                          spellcheck="false"
                          autocapitalize="off"
                          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                          aria-required="true"
                          {% if form.errors contains 'email' %}
                            aria-invalid="true"
                            aria-describedby="ContactForm-email-error"
                          {% endif %}
                          placeholder="{{ 'newsletter.label' | t }}"
                        >
                        <label class="field__label" for="ContactForm-email">
                          {{ 'newsletter.label' | t }}
                          <span aria-hidden="true">*</span>
                        </label>
                        <button type="submit" class="newsletter-form__button field__button" name="commit" aria-label="{{ 'newsletter.button_label' | t }}">
                          {% render 'icon-arrow' %}
                        </button>
                      </div>
                      {%- if form.errors contains 'email' -%}
                        <small class="newsletter-form__message form__message" id="ContactForm-email-error">
                          <span class="form-status-list__message">
                            {% render 'icon-error' %}
                            {{ form.errors.translated_fields['email'] | capitalize }}
                            {{ form.errors.messages['email'] }}.
                          </span>
                        </small>
                      {%- endif -%}
                    {% endform %}
                  {% else %}
                    <p class="flexible-banner__form-placeholder">Please configure the form ID in the block settings</p>
                  {% endif %}
                </div>
              
              {%- when 'custom_liquid' -%}
                <div class="flexible-banner__custom-liquid">
                  {{ block.settings.custom_liquid }}
                </div>
              
              {%- when '@app' -%}
                <div class="flexible-banner__app">
                  {% render block %}
                </div>
              
            {%- endcase -%}
          </div>
        {%- endfor -%}
        
      </div>
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "Flexible Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image",
      "info": "Leave blank for text-only banner"
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Image overlay opacity",
      "default": 0
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "full_bleed",
          "label": "Full width"
        },
        {
          "value": "grid",
          "label": "Constrain to page width"
        }
      ],
      "default": "full_bleed",
      "label": "Layout"
    },
    {
      "type": "select",
      "id": "banner_height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to content"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "label": "Banner height",
      "info": "Only applies when background image is set"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "top-left",
          "label": "Top left"
        },
        {
          "value": "top-center",
          "label": "Top center"
        },
        {
          "value": "top-right",
          "label": "Top right"
        },
        {
          "value": "middle-left",
          "label": "Middle left"
        },
        {
          "value": "middle-center",
          "label": "Middle center"
        },
        {
          "value": "middle-right",
          "label": "Middle right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom left"
        },
        {
          "value": "bottom-center",
          "label": "Bottom center"
        },
        {
          "value": "bottom-right",
          "label": "Bottom right"
        }
      ],
      "default": "middle-center",
      "label": "Desktop content position"
    },
    {
      "type": "select",
      "id": "mobile_content_position",
      "options": [
        {
          "value": "top-left",
          "label": "Top left"
        },
        {
          "value": "top-center",
          "label": "Top center"
        },
        {
          "value": "top-right",
          "label": "Top right"
        },
        {
          "value": "middle-left",
          "label": "Middle left"
        },
        {
          "value": "middle-center",
          "label": "Middle center"
        },
        {
          "value": "middle-right",
          "label": "Middle right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom left"
        },
        {
          "value": "bottom-center",
          "label": "Bottom center"
        },
        {
          "value": "bottom-right",
          "label": "Bottom right"
        }
      ],
      "default": "middle-center",
      "label": "Mobile content position"
    },
    {
      "type": "checkbox",
      "id": "show_text_box",
      "default": true,
      "label": "Show text container background",
      "info": "Only applies when background image is set"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "checkbox",
      "id": "show_text_below",
      "label": "Show content below image on mobile",
      "default": false,
      "info": "Only applies when background image is set"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Banner Heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            },
            {
              "value": "hxl",
              "label": "Extra large"
            },
            {
              "value": "hxxl",
              "label": "XX Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add descriptive text to your banner.</p>",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "body",
              "label": "Body"
            },
            {
              "value": "subtitle",
              "label": "Subtitle"
            },
            {
              "value": "caption-with-letter-spacing",
              "label": "Caption with letter spacing"
            }
          ],
          "default": "body",
          "label": "Text style"
        }
      ]
    },
    {
      "type": "buttons",
      "name": "Buttons",
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Button label",
          "label": "First button label",
          "info": "Leave the label blank to hide the button."
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "First button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_1",
          "default": false,
          "label": "Use outline button style"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Second button label",
          "info": "Leave the label blank to hide the button."
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Second button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_2",
          "default": false,
          "label": "Use outline button style"
        }
      ]
    },
    {
      "type": "shopify_form",
      "name": "Newsletter Form",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "form_id",
          "label": "Form ID",
          "default": "newsletter",
          "info": "Unique identifier for the form"
        }
      ]
    },
    {
      "type": "custom_liquid",
      "name": "Custom Liquid",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "Custom Liquid",
          "info": "Add custom Liquid code or Shopify Forms here"
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Flexible Banner",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "buttons"
        }
      ]
    }
  ]
}
{% endschema %}