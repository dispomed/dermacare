{% comment %} <img src="{{ 'menu_dermalogica.png' | asset_url }}" width="450" height="435"> {% endcomment %}
{% comment %} <img src="{{ 'menu_jane.png' | asset_url }}" width="450" height="435"> {% endcomment %}
{% comment %} <img src="{{ 'menu_nutrition.png' | asset_url }}" width="450" height="435"> {% endcomment %}

<div class="flex mt-[100px] lg:w-full ">
  <div class="flex justify-between lg:w-full flex-col lg:flex-row gap-[15px]">
    {% assign image_urls = 'menu_dermalogica.png,menu_jane.png,menu_nutrition.png' | split: ',' %}
    {% assign image_count = 0 %}
    {% for link in linklists['content-menu'].links %}
      <div class="content-menu-item">
        <img src="{{ image_urls[image_count] | asset_url }}" width="450" height="435">

        <h2>{{ link.title }}</h2>

        {% if link.links.size > 0 %}
          <ul>
            {% for child_link in link.links %}
              <a href="{{ child_link.url }}">
                <li>
                  {{ child_link.title }}
                  <img src="{{ 'right.svg' | asset_url }}">
                </li>
              </a>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      {% assign image_count = image_count | plus: 1 %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Content Menu",
  "tag": "section",
  "class": "section section-skin-types",
  "blocks": [],
  "settings": [],
  "presets": [
    {
      "name": "Content Menu"
    }
  ]
}
{% endschema %}
