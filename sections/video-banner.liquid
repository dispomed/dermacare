{{ 'section-video-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #VideoBanner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
  
  /* Custom text color variables */
  #VideoBanner-{{ section.id }} {
    --heading-color: {{ section.settings.heading_color | default: '#ffffff' }};
    --text-color: {{ section.settings.text_color | default: '#ffffff' }};
    --button-text-color: {{ section.settings.button_text_color | default: '#ffffff' }};
    --button-bg-color: {{ section.settings.button_bg_color | default: '#000000' }};
  }
  
  .video-banner-grid {
    --header-height: 80px;
    display: grid;
    grid-template-areas: "banner";
    grid-template-rows: minmax(var(--banner-min-height, 50vh), var(--banner-max-height, 60vh));
    position: relative;
    isolation: isolate;
  }
  
  .video-banner__media {
    grid-area: banner;
    z-index: 1;
  }
  
  .video-banner__content {
    grid-area: banner;
    z-index: 3;
    display: grid;
    align-items: {{ section.settings.desktop_content_position | split: '-' | first }};
    justify-items: {{ section.settings.desktop_content_position | split: '-' | last }};
  }
  
  .video-banner__overlay {
    grid-area: banner;
    z-index: 2;
    background: rgba(0, 0, 0, {{ section.settings.image_overlay_opacity | divided_by: 100.0 }});
  }
  
  /* Apply custom colors */
  #VideoBanner-{{ section.id }} .video-banner__heading {
    color: var(--heading-color) !important;
  }
  
  #VideoBanner-{{ section.id }} .video-banner__text {
    color: var(--text-color) !important;
  }
  
  #VideoBanner-{{ section.id }} .button--primary {
    background-color: var(--button-bg-color) !important;
    color: var(--button-text-color) !important;
    border-color: var(--button-bg-color) !important;
  }
  
  #VideoBanner-{{ section.id }} .button--secondary {
    background-color: transparent !important;
    color: var(--button-text-color) !important;
    border-color: var(--button-text-color) !important;
  }
  
  @media screen and (max-width: 749px) {
    .video-banner-grid {
      grid-template-rows: minmax(var(--banner-min-height-mobile, 40vh), var(--banner-max-height-mobile, 80vh));
    }
    
    .video-banner__content {
      align-items: {{ section.settings.mobile_content_position | split: '-' | first }};
      justify-items: {{ section.settings.mobile_content_position | split: '-' | last }};
    }
    
    {% if section.settings.show_text_below %}
    .video-banner-grid {
      grid-template-areas: 
        "banner"
        "content";
      grid-template-rows: var(--banner-height-mobile, 50vh) auto;
    }
    
    .video-banner__content {
      grid-area: content;
      z-index: 1;
      background: var(--color-background);
      padding: 2rem 1.5rem;
    }
    {% endif %}
  }
  
  /* Height variations */
  .video-banner--small {
    --banner-min-height: 42rem;
    --banner-min-height-mobile: 28rem;
  }
  
  .video-banner--medium {
    --banner-min-height: 56rem;
    --banner-min-height-mobile: 34rem;
  }
  
  .video-banner--large {
    --banner-min-height: 72rem;
    --banner-min-height-mobile: 39rem;
  }
  
  .video-banner--adapt {
    --banner-min-height: auto;
    --banner-max-height: none;
  }
{%- endstyle -%}

<div
  id="VideoBanner-{{ section.id }}"
  class="video-banner video-banner--{{ section.settings.banner_height }}{% if section.settings.show_text_below %} video-banner--mobile-bottom{% endif %}{% if section.settings.show_text_box == false %} video-banner--desktop-transparent{% endif %} color-{{ section.settings.color_scheme }} gradient{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
>
  <div class="video-banner-grid{% if section.settings.layout == 'grid' %} page-width{% endif %}">
    
    <!-- Video Media Layer -->
    <div class="video-banner__media media">
      {%- if section.settings.video_url != blank -%}
        <video
          id="videobanner-{{ section.id }}"
          class="video-banner__video"
          {% if section.settings.autoplay %}autoplay{% endif %}
          {% if section.settings.muted %}muted{% endif %}
          {% if section.settings.loop %}loop{% endif %}
          {% if section.settings.controls %}controls{% endif %}
          playsinline
          {% if section.settings.poster_image %}poster="{{ section.settings.poster_image | image_url: width: 1920 }}"{% endif %}
        >
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          {%- if section.settings.video_url_webm -%}
            <source src="{{ section.settings.video_url_webm }}" type="video/webm">
          {%- endif -%}
          Your browser does not support HTML5 video.
        </video>
      {%- elsif section.settings.fallback_image -%}
        {%- liquid
          assign height = section.settings.fallback_image.width | divided_by: section.settings.fallback_image.aspect_ratio | round
          assign sizes = '100vw'
          assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
          assign fetch_priority = 'auto'
          if section.index == 1
            assign fetch_priority = 'high'
          endif
        -%}
        {{
          section.settings.fallback_image
          | image_url: width: 3840
          | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority, class: 'video-banner__fallback'
        }}
      {%- else -%}
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg video-banner__placeholder' }}
      {%- endif -%}
    </div>
    
    <!-- Overlay Layer -->
    <div class="video-banner__overlay"></div>
    
    <!-- Content Layer -->
    <div class="video-banner__content page-width">
      <div class="video-banner__box content-container content-container--full-width-mobile{% if section.settings.show_text_box %} color-{{ section.settings.text_color_scheme }} gradient{% endif %}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="video-banner__heading inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {% if block.settings.heading_color != blank %}style="color: {{ block.settings.heading_color }} !important;"{% endif %}
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </h2>
            {%- when 'text' -%}
              <div 
                class="video-banner__text rte {{ block.settings.text_style }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" 
                {% if block.settings.text_color != blank %}style="--text-color: {{ block.settings.text_color }}; color: {{ block.settings.text_color }} !important;"{% endif %}
                {{ block.shopify_attributes }}
              >
                <p {% if block.settings.text_color != blank %}style="color: {{ block.settings.text_color }} !important;"{% endif %}>{{ block.settings.text }}</p>
              </div>
            {%- when 'buttons' -%}
              <div
                class="video-banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} video-banner__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
              >
                {%- if block.settings.button_label_1 != blank -%}
                  <a
                    {% if block.settings.button_link_1 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_1 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                    {% if block.settings.button_1_bg_color != blank or block.settings.button_1_text_color != blank %}
                      style="{% if block.settings.button_1_bg_color != blank %}background-color: {{ block.settings.button_1_bg_color }} !important; border-color: {{ block.settings.button_1_bg_color }} !important;{% endif %}{% if block.settings.button_1_text_color != blank %} color: {{ block.settings.button_1_text_color }} !important;{% endif %}"
                    {% endif %}
                  >
                    {{- block.settings.button_label_1 | escape -}}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                    {% if block.settings.button_2_bg_color != blank or block.settings.button_2_text_color != blank %}
                      style="{% if block.settings.button_2_bg_color != blank %}background-color: {{ block.settings.button_2_bg_color }} !important; border-color: {{ block.settings.button_2_bg_color }} !important;{% endif %}{% if block.settings.button_2_text_color != blank %} color: {{ block.settings.button_2_text_color }} !important;{% endif %}"
                    {% endif %}
                  >
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
    
  </div>
</div>

{%- if section.settings.autoplay and section.settings.video_url != blank -%}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const video = document.getElementById('videobanner-{{ section.id }}');
      if (video) {
        // Ensure video plays on mobile devices
        const playVideo = () => {
          video.play().catch(e => {
            console.log('Video autoplay prevented:', e);
          });
        };
        
        // Try to play immediately
        playVideo();
        
        // Also try on user interaction
        document.addEventListener('touchstart', playVideo, { once: true });
        document.addEventListener('click', playVideo, { once: true });
      }
    });
  </script>
{%- endif -%}

{% schema %}
{
  "name": "Video Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL (MP4)",
      "info": "Upload your video to Files section and paste the URL here"
    },
    {
      "type": "text",
      "id": "video_url_webm",
      "label": "Video URL (WebM)",
      "info": "Optional: WebM format for better browser compatibility"
    },
    {
      "type": "image_picker",
      "id": "poster_image",
      "label": "Poster Image",
      "info": "Image shown before video loads"
    },
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback Image",
      "info": "Shown if no video URL is provided"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "default": true,
      "label": "Autoplay video"
    },
    {
      "type": "checkbox",
      "id": "muted",
      "default": true,
      "label": "Muted",
      "info": "Required for autoplay on most browsers"
    },
    {
      "type": "checkbox",
      "id": "loop",
      "default": true,
      "label": "Loop video"
    },
    {
      "type": "checkbox",
      "id": "controls",
      "default": false,
      "label": "Show video controls"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "full_bleed",
          "label": "Full width"
        },
        {
          "value": "grid",
          "label": "Constrain to page width"
        }
      ],
      "default": "full_bleed",
      "label": "Layout"
    },
    {
      "type": "select",
      "id": "banner_height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to content"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium",
      "label": "Banner height"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "start-start",
          "label": "Top left"
        },
        {
          "value": "start-center",
          "label": "Top center"
        },
        {
          "value": "start-end",
          "label": "Top right"
        },
        {
          "value": "center-start",
          "label": "Middle left"
        },
        {
          "value": "center-center",
          "label": "Middle center"
        },
        {
          "value": "center-end",
          "label": "Middle right"
        },
        {
          "value": "end-start",
          "label": "Bottom left"
        },
        {
          "value": "end-center",
          "label": "Bottom center"
        },
        {
          "value": "end-end",
          "label": "Bottom right"
        }
      ],
      "default": "center-center",
      "label": "Desktop content position"
    },
    {
      "type": "select",
      "id": "mobile_content_position",
      "options": [
        {
          "value": "start-start",
          "label": "Top left"
        },
        {
          "value": "start-center",
          "label": "Top center"
        },
        {
          "value": "start-end",
          "label": "Top right"
        },
        {
          "value": "center-start",
          "label": "Middle left"
        },
        {
          "value": "center-center",
          "label": "Middle center"
        },
        {
          "value": "center-end",
          "label": "Middle right"
        },
        {
          "value": "end-start",
          "label": "Bottom left"
        },
        {
          "value": "end-center",
          "label": "Bottom center"
        },
        {
          "value": "end-end",
          "label": "Bottom right"
        }
      ],
      "default": "center-center",
      "label": "Mobile content position"
    },
    {
      "type": "checkbox",
      "id": "show_text_box",
      "default": true,
      "label": "Show text container background"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Background color scheme",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "text_color_scheme",
      "label": "Text container color scheme",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Global heading color",
      "info": "Override heading color for all blocks"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Global text color",
      "info": "Override text color for all blocks"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Global button background",
      "info": "Override button background for all blocks"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Global button text color",
      "info": "Override button text color for all blocks"
    },
