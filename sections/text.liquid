<div class="custom-text-{{ section.id }} section-{{ section.id }}-padding">
  <div class="isolate {{ section.settings.section_width }}">
    {{ section.settings.content }}
  </div>
</div>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "page-width page-width--narrow",
          "label": "t:sections.custom-liquid.settings.section_width.options.option_1.label"
        },
        {
          "value": "page-width",
          "label": "t:sections.custom-liquid.settings.section_width.options.option_2.label"
        },
        {
          "value": "page-width page-width--full",
          "label": "t:sections.custom-liquid.settings.section_width.options.option_3.label"
        }
      ],
      "default": "page-width page-width--narrow",
      "label": "t:sections.custom-liquid.settings.section_width.default.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Text",
      "blocks": []
    }
  ]
}
{% endschema %}
